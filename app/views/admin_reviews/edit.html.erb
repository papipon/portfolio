<h2>レビュー編集</h2>




<%= form_for @review, url:admin_review_path do |f| %>
　　<div class="form-group">
        <%= f.label :name, '投稿者名' %>
        <%= f.text_field :name, class: 'form-control' %>
   </div>
   <div class="form-group">
        <%= f.label :title, 'レビュータイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
   </div>
   <div class="form-group">
        <%= f.label :body, 'レビュー本文' %>
        <%= f.text_area :body, class: 'form-control', rows:10 %>
   </div>
        <%= f.submit '編集完了', class: 'btn btn-warning ' %>

 <% end %>
 <%= link_to '削除', admin_review_path(@review), method: :delete , class:"btn btn-danger", 'data-confirm' => '本当に削除しますか？' %>
