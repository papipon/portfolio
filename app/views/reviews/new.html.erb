<div class = "container">
  <h2>レビュー投稿</h2>
    <%= form_for @review, url: product_reviews_path,method: :post do |f| %>
　　 <div class="form-group row">
      <%= f.label :name, '投稿者名',class: 'col-form-label'  %>
      <%= f.text_field :name, class: 'form-control',style: 'width:200px;' %>
    </div>
    <div class="form-group row">
      <%= f.label :title, 'タイトル',class:'col-form-label' %>
      <%= f.text_field :title, class: 'form-control',style: 'width:200px;' %>
    </div>
    <div class="form-group row" id="star">
	  <%= f.label :star,'評価 ', class:'col-form-label' %>
	  <%= f.hidden_field :star, id: :review_star %>
    </div>
    <div class="form-group row">
      <%= f.label :body, '本文',class:'col-form-label' %>
       <%= f.text_area :body, class: 'form-control',style:'width:600px; height:200px;' %>
    </div>
    <div class="col-md-4">
      <%= f.submit '投稿', class: 'btn btn-info btn-lg btn-block',style: 'width:150px;' %>
      <% end %>
    </div>
</div>
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= public_path('star-off.png') %>',
    starOn : '<%= public_path('star-on.png') %>',
    starHalf: '<%= public_path('star-half.png') %>',
    scoreName: 'review[star]',
    half: true,
  });
  </script>